################################################################################

User {{ apache.user }}
Group {{ apache.group }}

################################################################################

PidFile run/{{ apache_role.service }}.pid

################################################################################

ServerTokens ProductOnly
ServerRoot "{{ apache_role.path }}"
{% if apache.host is defined %}
Listen {{ apache.host }}:{{ apache.port }}
{% else %}
Listen {{ apache.port|default('80') }}
{% endif %}
NameVirtualHost *:{{ apache.port|default('80') }}

################################################################################

Timeout 60
KeepAlive On
MaxKeepAliveRequests 1000
KeepAliveTimeout 15

################################################################################

{% if apache.flavor == "prefork" %}
<IfModule prefork.c>
StartServers       {{ ansible_processor_vcpus|default('1') }}
MinSpareServers    {{ ansible_processor_vcpus|default('1') }}
MaxSpareServers   {{ ansible_processor_vcpus*2|default('2') }}
ServerLimit      {{ ansible_processor_vcpus*64|default('64') }}
MaxClients       {{ ansible_processor_vcpus*64|default('64') }}
MaxRequestsPerChild  10000
</IfModule>
{% endif %}

{% if apache.flavor == "worker" %}
<IfModule worker.c>
StartServers         4
MaxClients         300
MinSpareThreads     25
MaxSpareThreads     75
ThreadsPerChild     25
MaxRequestsPerChild  0
</IfModule>
{% endif %}

################################################################################

ServerAdmin root@localhost
UseCanonicalName Off
DocumentRoot "{{ apache.root }}"
Alias "/icons" "/var/www/icons"

<Directory />
    Options FollowSymLinks
    AllowOverride All
</Directory>

<Directory "{{ apache.root }}">
    Options Indexes FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
</Directory>

<Files ~ "^\.ht">
    Order allow,deny
    Deny from all
    Satisfy All
</Files>

<IfModule mod_mime_magic.c>
   MIMEMagicFile /usr/share/magic.mime
    MIMEMagicFile conf/magic
</IfModule>

################################################################################

DirectoryIndex index.html index.html.var index.php
AccessFileName .htaccess
TypesConfig /etc/mime.types
DefaultType text/plain
HostnameLookups Off
EnableMMAP off
EnableSendfile off

################################################################################

ErrorLog logs/default_error.log
LogLevel warn
LogFormat "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\"" combined
LogFormat "%h %l %u %t \"%r\" %>s %b" common
LogFormat "%{Referer}i -> %U" referer
LogFormat "%{User-agent}i" agent
LogFormat "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\" %I %O" combinedio
CustomLog logs/access_log common
CustomLog logs/referer_log referer
CustomLog logs/agent_log agent
CustomLog logs/access_log combined

################################################################################

ServerSignature On
IndexOptions FancyIndexing VersionSort NameWidth=* HTMLTable Charset=UTF-8 SuppressIcon

AddIconByEncoding (CMP,/icons/compressed.gif) x-compress x-gzip

AddDescription "GZIP compressed document" .gz
AddDescription "tar archive" .tar
AddDescription "GZIP compressed tar archive" .tgz
ReadmeName README.html
HeaderName HEADER.html
IndexIgnore .??* *~ *# HEADER* README* RCS CVS *,v *,t

